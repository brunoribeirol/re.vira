<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Título: Cadastro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Nome da Empresa -->
        <EditText
            android:id="@+id/edtNomeEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Empresa"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Senha -->
        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- CNPJ -->
        <EditText
            android:id="@+id/edtCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNPJ"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- CEP -->
        <EditText
            android:id="@+id/edtCep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CEP"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Cidade -->
        <EditText
            android:id="@+id/edtCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Logradouro -->
        <EditText
            android:id="@+id/edtLogradouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Logradouro"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Bairro -->
        <EditText
            android:id="@+id/edtBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bairro"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Número -->
        <EditText
            android:id="@+id/edtNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Layout Horizontal para os Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- Botão de Voltar -->
            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Voltar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:onClick="btnVoltar" />/>

            <!-- Botão de Cadastrar Empresa -->
            <Button
                android:id="@+id/btnCadastrarEmpresa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Cadastrar Empresa"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:onClick="btnCadastrarEmpresa" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <!-- Nome da Empresa -->
    <TextView
        android:id="@+id/tvNomeEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Empresa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Pontuação da Empresa -->
    <TextView
        android:id="@+id/tvPontuacaoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 4.5"
        android:textSize="18sp"
        android:layout_below="@id/tvNomeEmpresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color" />

</RelativeLayout>

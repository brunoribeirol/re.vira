<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <!-- Botão no Canto Superior Direito -->
    <Button
        android:id="@+id/btnNomeEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Nome da Empresa"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:onClick="btnNomeEmpresa" />

    <!-- Logo da Empresa -->
    <ImageView
        android:id="@+id/ivLogoEmpresa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnNomeEmpresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ambev_logo" />

    <!-- Nome da Empresa (Centralizado) -->
    <TextView
        android:id="@+id/tvNomeEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambev"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/ivLogoEmpresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo: Sua Pontuação -->
    <TextView
        android:id="@+id/tvPontuacaoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua Pontuação: 4.5"
        android:textSize="18sp"
        android:layout_below="@id/tvNomeEmpresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo: Saldo de Propaganda -->
    <TextView
        android:id="@+id/tvSaldoPropaganda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo de Propaganda: 20 horas"
        android:textSize="18sp"
        android:layout_below="@id/tvPontuacaoEmpresa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo: Quantidade de Visualizações do Anúncio -->
    <TextView
        android:id="@+id/tvQuantidadeVisualizacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizações do Anúncio: 500"
        android:textSize="18sp"
        android:layout_below="@id/tvSaldoPropaganda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Subtítulo: Histórico de Produtos Recebidos -->
    <TextView
        android:id="@+id/tvHistoricoProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico de Produtos Recebidos: 256 Garrafas de Vidro, 1567 Latas de alumínio, 17 Embalagens de Papelão"
        android:textSize="18sp"
        android:layout_below="@id/tvQuantidadeVisualizacoes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textAlignment="center" />

</RelativeLayout>

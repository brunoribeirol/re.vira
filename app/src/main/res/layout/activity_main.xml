<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/re_vira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="re.vira"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <!-- Espaço para Foto -->
    <ImageView
        android:id="@+id/re_vira_png"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/capa_revira" />

    <!-- Espaço para CPF/CNPJ -->
    <EditText
        android:id="@+id/cnpj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="CNPJ"
        android:inputType="number"
        android:textSize="24sp" />

    <!-- Espaço para Senha -->
    <EditText
        android:id="@+id/senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:textSize="24sp" />

    <!-- LinearLayout para Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/cadastrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/colorPrimary" />
    </LinearLayout>

    <!-- Botão "Quero Descartar um Produto" -->
    <Button
        android:id="@+id/descartar_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quero Descartar um Produto"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="16dp" />
</LinearLayout>

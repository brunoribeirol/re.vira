<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re.vira"
        android:textSize="50sp"
        android:textColor="@color/colorBackground"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnCadastrarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Empresa"
            android:textColor="@color/colorBackground"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp"
            android:onClick="onCadastrarEmpresaClick"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorBackground"
            android:background="@drawable/button_background"
            android:layout_marginBottom="16dp"
            android:onClick="onLoginClick"/>

        <Button
            android:id="@+id/btnVerificarPontosColeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar Pontos de Coleta"
            android:textColor="@color/colorBackground"
            android:background="@drawable/button_background"
            android:onClick="onVerificarPontosColetaClick"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Ícone da Empresa -->
    <View
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ambev_logo"
        android:layout_marginEnd="16dp" />

    <!-- Nome da Empresa -->
    <TextView
        android:id="@+id/tvNomeEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Empresa"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />

    <!-- Pontuação da Empresa -->
    <TextView
        android:id="@+id/tvPontuacaoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1863 pts"
        android:textSize="14sp"
        android:layout_below="@id/tvNomeEmpresa"
        android:layout_marginTop="4dp" />

    <!-- Tempo da Empresa -->
    <TextView
        android:id="@+id/tvTempoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72h31m"
        android:textSize="14sp"
        android:layout_below="@id/tvPontuacaoEmpresa"
        android:layout_marginTop="4dp" />

    <!-- Posição da Empresa -->
    <TextView
        android:id="@+id/tvPosicaoEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1º"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <!-- Botão de Voltar -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Voltar"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:onClick="btnVoltar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnVoltar"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título: Pontos de Coleta -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pontos de Coleta"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

        <!-- Empresa 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Empresa: TechNova Solutions"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ: 12.345.678/0001-90"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: Avenida Paulista, 1578, Bela Vista, São Paulo - SP, CEP: 01310-200"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produtos Recebidos:  Placas-mãe de computadores,  Cartuchos de toner e tinta, Baterias de notebooks"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distância: 5.7km"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Empresa 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Empresa: BioHealth Pharmaceuticals"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ: 98.765.432/0001-09"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: Rua dos Andradas, 500, Centro Histórico, Porto Alegre - RS, CEP: 90020-005"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produtos Recebidos: Frascos de vidro de medicamentos usados, Equipamentos de laboratório desativados, Seringas e agulhas descartáveis"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distância: 1.3km"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Empresa 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Empresa: EcoEnergia Renovável"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ: 23.456.789/0001-67"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: Avenida Rio Branco, 1234, Centro, Rio de Janeiro - RJ, CEP: 20040-002"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produtos Recebidos: Painéis solares antigos, Baterias de armazenamento usadas, Cabos e fios elétricos"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distância: 15.3km"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>

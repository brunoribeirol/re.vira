<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes da Empresa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Nome da Empresa -->
    <TextView
        android:id="@+id/tvNomeEmpresaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Empresa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Segmento -->
    <TextView
        android:id="@+id/tvSegmentoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segmento"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Distância -->
    <TextView
        android:id="@+id/tvDistanciaDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distância: 2.3 km"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Pontuação -->
    <TextView
        android:id="@+id/tvPontuacaoDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 4.5"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Produtos -->
    <TextView
        android:id="@+id/tvProdutosDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos: Produto 1, Produto 2"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título: Produtos Retornáveis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produtos Retornáveis"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Subtítulo: Categoria da Empresa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria da Empresa"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Campo para inserir a categoria da empresa -->
        <EditText
            android:id="@+id/edtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Subtítulo: Produtos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produtos Recebidos"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Campos para inserir os produtos que a empresa recebe -->
        <EditText
            android:id="@+id/edtProduct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 1"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 2"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 3"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 5"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Layout Horizontal para os Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- Botão de Voltar -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Voltar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:onClick="btnVoltar" />

            <!-- Botão de Enviar -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Enviar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:onClick="btnEnviar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

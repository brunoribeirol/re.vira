<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPapelao"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Produtos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Produtos -->
        <EditText
            android:id="@+id/edtProduct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 1"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 2"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 3"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtProduct5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Produto 5"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Voltar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:onClick="btnVoltar" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Salvar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:onClick="btnSalvar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
